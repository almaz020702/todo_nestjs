datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id       Int    @id @default(autoincrement())
    email    String @unique
    password String
    tasks    Task[]
}

model Task {
    id        Int      @id @default(autoincrement())
    userId    Int
    title     String
    completed Boolean  @default(false)
    dueDate   DateTime?
    User      User     @relation(fields: [userId], references: [id])
}
